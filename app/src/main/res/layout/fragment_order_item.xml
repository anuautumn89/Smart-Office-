<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teaCoffeeBgColor"
       >
        <LinearLayout
            android:id="@+id/lutOrderRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_5"
             android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lutOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/order_item_boarder_overlay"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingEnd="@dimen/margin_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="ORDER"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="10"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lutOrderDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingStart="@dimen/margin_2"
                android:background="@color/lightBlue700"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="TOATAL COUNT"
                    />

                <TextView
                    android:id="@+id/txtTotalOrderCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="4dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="1"/>
                <TextView
                    android:id="@+id/txtDestination"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="4"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Chairman Board room" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/margin_8"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:text="TIME"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtDeliveryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:textStyle="normal"
                        android:text="12.50 am 123456" />
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lutViewOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/order_item_right_border_radious"
                android:paddingStart="@dimen/margin_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/margin_2"
                    android:text="VIEW"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/margin_8"
                    app:srcCompat="@drawable/ic_side_arrow"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>